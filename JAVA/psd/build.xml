<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="jar" name="psd">

    <property environment="env"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.6"/>
    <property name="source" value="1.6"/>
    <property name="lib.dir" value="lib"/>
    <property name="jar.name" value="psd"/>
    
    <path id="psd.classpath">
        <pathelement location="bin"/>
        <pathelement location="lib/log4j-1.2.16.jar"/>
        <pathelement location="lib/sqlite-jdbc-3.7.2.jar"/>
    </path>


    
    <target name="init">
      <mkdir dir="bin"/>
      <mkdir dir="lib"/>
        <copy includeemptydirs="false" todir="bin">
          <fileset dir="src">
            <exclude name="**/*.launch"/>
            <exclude name="**/*.java"/>
            </fileset>
        </copy>
    </target>
    
    <target name="clean">
      <delete dir="bin"/>
      <delete file="${jar.name}.jar"/>
    </target>
    
    
    <target depends="init" name="compile">
      <echo message="${ant.project.name}: ${ant.file}"/>
      <javac includeantruntime="true" debug="true" debuglevel="${debuglevel}" destdir="bin" source="${source}" target="${target}">
        <src path="src"/>
        <classpath refid="psd.classpath"/>
      </javac>
    </target>
    <target description="Build all projects which reference this project. Useful to propagate changes." name="build-refprojects"/>
    
    <pathconvert property="mf.classpath" pathsep=" ">
      <path refid="psd.classpath"/>
      <mapper>
	<chainedmapper>
	  <flattenmapper/>
	  <globmapper from="*.jar" to="lib/*.jar"/>
	</chainedmapper>
      </mapper>
    </pathconvert>

    <target name="jar" depends="clean, compile">
      <jar destfile="${jar.name}.jar"
           basedir="bin"
           includes="**/*.class">
	<manifest>
          <attribute name="Main-Class" value="ch.epfl.bbcf.psd.Main"/>
          <attribute name="Class-Path" value="${mf.classpath}" />
	</manifest>
	<zipfileset dir="/lib" includes="log4j-1.2.16.jar"/>
        <zipfileset dir="/lib" includes="sqlite-jdbc-3.7.2.jar"/>
	
      </jar>
    </target> 

</project>
